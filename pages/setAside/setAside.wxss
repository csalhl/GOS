page {
  background: #f0f2f5;
}

.page {
  padding-bottom: 90rpx;
}

.step {
  background: #fff;
  position: relative;
  padding: 10rpx 0 20rpx 0;
}

.step .line {
  position: absolute;
  top: 98rpx;
  width: 100%;
  height: 2rpx;
  background: #e1e3e5;
  z-index: 0;
}

.step .li {
  display: inline-block;
  width: 22.5%;
  text-align: center;
  z-index: 4;
  position: relative;
}

.step .li .time {
  background: #fff;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  font-size: 26rpx;
}

.step .li .time .txt {
  display: inline-block;
  font-size: 26rpx;
  color: #e6492e;
  margin-left: 10rpx;
}

.step .li .circle {
  display: block;
  margin: auto;
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  background: #e1e3e5;
  border: 1px solid #b2b2b2;
}

.step .ok {
  position: absolute;
  display: block;
  margin: auto;
  left: 0px;
  right: 0px;
  width: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  border-radius: 50%;
  background: #fff;
  border: 1px solid #245098;
  z-index: 10;
}

.step .li>text {
  display: inline-block;
  font-size: 30rpx;
  color: #b2b2b2;
  margin-top: 10rpx;
}

.step .active::before {
  position: absolute;
  top: 68rpx;
  left: 0px;
  right: 0px;
  margin: auto;
  display: inline-block;
  content: "";
  width: 14rpx;
  height: 14rpx;
  border-radius: 50%;
  background: #fff;
  z-index: 3;
  border: 13rpx solid #245098;
}

.step .lines {
  position: absolute;
  top: 98rpx;
  left: 0rpx;
  z-index: 2;
  height: 2rpx;
  background: #245098;
}

.step .active text {
  color: #245098;
}

.order {
  margin: 25rpx;
  background: #fff;
  border-radius: 6rpx;
  padding: 30rpx;
}

.order .title {
  padding-left: 20rpx;
  position: relative;
  font-size: 34rpx;
  padding-bottom: 30rpx;
  font-weight: 600;
  border-bottom: 2rpx solid #e1e3e5;
}

.order .title::after {
  content: "";
  width: 8rpx;
  height: 45%;
  position: absolute;
  top: 12%;
  left: 0px;
  background: #245098;
}

.order .li {
  font-size: 28rpx;
  padding: 25rpx 0rpx;
  border-bottom: 2rpx solid #e1e3e5;
}

.order .li span {
  color: #757980;
  font-size: 30rpx;
}

.order .li text {
  float: right;
  font-size: 27rpx;
  color: #1e2021;
  font-weight: 600;
  margin-top: 8rpx;
}

.order .li .dtls {
  margin-top: 20rpx;
  font-size: 27rpx;
  color: #1e2021;
  font-weight: 600;
}

.order .li image {
  width: 100rpx;
  height: 100rpx;
  margin-top: 15rpx;
  margin-right: 15rpx;
}

.order .li:last-child {
  border: 0px;
}

.getOrder {
  background: #245098;
  color: #fff;
  width: 100%;
  font-size: 30rpx;
  text-align: center;
  padding: 30rpx 0rpx;
  position: fixed;
  bottom: 0px;
  left: 0px;
}

.opinion {
  display: flex;
}

.opinion .box {
  flex: auto;
  margin: 80rpx 20rpx 0rpx 20rpx;
  text-align: left;
  position: relative;
}

.opinion .box .box-icon {
  width: 76rpx;
  height: 76rpx;
  line-height: 76rpx;
  border-radius: 50%;
  background: #bcc2cc;
  text-align: center;
  position: absolute;
  left: 0rpx;
  top: 0rpx;
}

.opinion .box .box-icon image {
  display: inline-block;
  vertical-align: middle;
  width: 40rpx;
  height: 40rpx;
}

.opinion .box .box-txt {
  display: inline-block;
  background: #e6e8ed;
  border: 1px solid #e6e8ed;
  border-radius: 50rpx;
  height: 64rpx;
  line-height: 64rpx;
  color: #494b4c;
  font-size: 30rpx;
  text-align: center;
  margin-top: 6rpx;
  padding-left: 35rpx;
  width: 80%;
}

.opinion .active .box-icon {
  background: #6ab867;
}

.opinion .active .box-txt {
  background: rgba(123, 181, 66, 0.2);
  border-color: #7bb542;
  color: #7bb542;
}

.opinion .actives .box-icon {
  background: #eb513e;
}

.opinion .actives .box-txt {
  background: rgba(247, 98, 96, 0.2);
  border-color: #f76260;
  color: #f76260;
}

.nopass {
  display: block;
  width: auto;
  margin: 30rpx 25rpx;
  background: #fff;
  padding: 30rpx;
  font-size: 30rpx;
  border-radius: 6rpx;
}
