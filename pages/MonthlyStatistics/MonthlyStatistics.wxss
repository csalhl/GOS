/* pages/MonthlyStatistics/MonthlyStatistics.wxss */

page {
  background: #f0f2f5;
}

.page {
  position: relative;
  width: 100%;
  height: 100%;
}

.statistics .title {
  font-size: 34rpx;
  font-weight: 600;
  padding: 40rpx 24rpx 0rpx 24px;
}

.statistics .li {
  background: #fff;
  margin: 24rpx;
  padding: 40rpx;
  background: #fff;
  border-radius: 6rpx;overflow: hidden
}

.statistics .li .left {
  float: left;
  font-size: 32rpx;
  margin-top: 4rpx;
}

.statistics .li .left .month {
  position: relative;
  display: inline-block;
  width: 40rpx;
  height: 42rpx;
  line-height: 56rpx;
  font-size: 20rpx;
  color: #245098;
  text-align: center;margin-right: 23rpx;
}

.statistics .li .left .month image {
  width: 40rpx;
  height: 42rpx;
  left: 0rpx;top: 0rpx;
  position: absolute;
}
.statistics .li .left>text{
  font-size: 40rpx;margin-right: 10rpx;
}
.statistics .li .right{
  float: right;font-size: 48rpx;font-weight: 600
}
.statistics .li-bottom{
  padding-bottom: 60rpx;
  text-align: center;font-size: 26rpx;color: #757980;margin-top: 32rpx;
}

.ordering {
  text-align: center;
}

.ordering image {width:410rpx;height: 280rpx;
  margin-bottom: 40rpx;
  margin-top: 180rpx;
}

.ordering text {
  display: block;
  font-size: 30rpx;
  letter-spacing: 4rpx;
  font-weight: 500;
}
