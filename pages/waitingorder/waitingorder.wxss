/* pages/waitingorder/waitingorder.wxss */

page {
  background: #f0f2f5;
}

.page {
  padding-bottom: 90rpx;
}

.step {
  background: #fff;
  position: relative;
  padding: 10rpx 0 20rpx 0;
}

.step .line {
  position: absolute;
  top: 98rpx;
  width: 100%;
  height: 2rpx;
  background: #e1e3e5;
  z-index: 0;
}

.step .li {
  display: inline-block;
  width: 22.5%;
  text-align: center;
  z-index: 4;
  position: relative;
}

.step .li .time {
  background: #fff;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  font-size: 26rpx;
}

.step .li .time .txt {
  display: inline-block;
  font-size: 26rpx;
  color: #e6492e;
  margin-left: 10rpx;
}

.step .li .circle {
  display: block;
  margin: auto;
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  background: #e1e3e5;
  border: 1px solid #b2b2b2;
}

.step .ok {
  position: absolute;
  display: block;
  margin: auto;
  left: 0px;
  right: 0px;
  width: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  border-radius: 50%;
  background: #fff;
  border: 1px solid #245098;
  z-index: 10;
}

.step .li>text {
  display: inline-block;
  font-size: 30rpx;
  color: #b2b2b2;
  margin-top: 10rpx;
}

.step .active::before {
  position: absolute;
  top: 68rpx;
  left: 0px;
  right: 0px;
  margin: auto;
  display: inline-block;
  content: "";
  width: 14rpx;
  height: 14rpx;
  border-radius: 50%;
  background: #fff;
  z-index: 3;
  border: 13rpx solid #245098;
}

.step .lines {
  position: absolute;
  top: 98rpx;
  left: 0rpx;
  z-index: 2;
  height: 2rpx;
  background: #245098;
}

.step .active text {
  color: #245098;
}

.order {
  margin: 25rpx;
  background: #fff;
  border-radius: 6rpx;
  padding: 30rpx;
}

.order .title {
  padding-left: 20rpx;
  position: relative;
  font-size: 34rpx;
  padding-bottom: 30rpx;
  font-weight: 600;
  border-bottom: 2rpx solid #e1e3e5;
}

.order .title::after {
  content: "";
  width: 8rpx;
  height: 45%;
  position: absolute;
  top: 12%;
  left: 0px;
  background: #245098;
}

.order .li {
  font-size: 28rpx;
  padding: 25rpx 0rpx;
  border-bottom: 2rpx solid #e1e3e5;
}

.order .li span {
  color: #757980;
  font-size: 30rpx;
}

.order .li text {
  float: right;
  font-size: 30rpx;
  color: #1e2021;
  font-weight: 500;
}
.order .li .type{
  background: #f0f2f5;
  color: #1e2021;border-radius: 50rpx;padding: 2rpx 20rpx
}
.order .li .dtls {
  margin-top: 20rpx;
  font-size: 30rpx;
  color: #1e2021;
  font-weight: 500;
}

.order .li image {
  width: 100rpx;
  height: 100rpx;
  margin-top: 15rpx;
  margin-right: 15rpx;
}

.order .li:last-child {
  border: 0px;
}

.getOrder {
  background: #245098;
  color: #fff;
  width: 100%;
  font-size: 30rpx;
  text-align: center;
  padding: 30rpx 0rpx;
  position: fixed;
  bottom: 0px;
  left: 0px;
}
