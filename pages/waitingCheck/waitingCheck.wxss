/* pages/waitingorder/waitingorder.wxss */

page {
  background: #f0f2f5;
}

.page {
  padding-bottom: 90rpx;
}

.step {
  background: #fff;
  position: relative;
  padding: 10rpx 0 20rpx 0;
}

.step .line {
  position: absolute;
  top: 98rpx;
  width: 100%;
  height: 2rpx;
  background: #e1e3e5;
  z-index: 0;
}

.step .li {
  display: inline-block;
  width: 22.5%;
  text-align: center;
  z-index: 4;
  position: relative;
}

.step .li .time {
  background: #fff;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  font-size: 26rpx;
}

.step .li .time .txt {
  display: inline-block;
  font-size: 26rpx;
  color: #e6492e;
  margin-left: 10rpx;
}

.step .li .circle {
  display: block;
  margin: auto;
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  background: #e1e3e5;
  border: 1px solid #b2b2b2;
}

.step .li>text {
  display: inline-block;
  font-size: 30rpx;
  color: #b2b2b2;
  margin-top: 10rpx;
}

.step .active::before {
  position: absolute;
  top: 68rpx;
  left: 0px;
  right: 0px;
  margin: auto;
  display: inline-block;
  content: "";
  width: 14rpx;
  height: 14rpx;
  border-radius: 50%;
  background: #fff;
  z-index: 3;
  border: 13rpx solid #245098;
}

.step .lines {
  position: absolute;
  top: 98rpx;
  left: 0rpx;
  z-index: 2;
  height: 2rpx;
  background: #245098;
}

.step .active text {
  color: #245098;
}

.step .ok {
  position: absolute;
  display: block;
  margin: auto;
  left: 0px;
  right: 0px;
  width: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  border-radius: 50%;
  background: #fff;
  border: 1px solid #245098;
  z-index: 10;
}

.form {
  margin: 35rpx 25rpx;
}

.form .item {
  background: #fff;
  margin-bottom: 30rpx;
  padding: 20rpx;
  position: relative;
  border-radius: 5rpx;
  overflow: hidden;
}

.form .item label {
  color: #494b4c;
  font-size: 30rpx;
  display: block;
  height: 52rpx;
  line-height: 58rpx;
  float: left;
}

.form .item .item-href {
  display: block;
  border: 1rpx solid #747980;
  border-radius: 8rpx;
  color: #494b4c;
  float: left;
  width: 100%;
  text-align: center;
  height: 88rpx;
  line-height: 88rpx;
  margin-top: 22rpx;
}

.form .item .item-href i-icon {
  display: inline-block;
  vertical-align: middle;
}

.form .item .item-href  image {
  width: 36rpx;
  height: 33rpx;
  display: inline-block;
  vertical-align: middle;
  margin-right: 16rpx;
}

.form .item .item-href text {
  display: inline-block;
  vertical-align: middle;
}

.form .item .nochose {
  color: #b2b2b2;
}

.form .item picker {
  display: block;
  width: 70%;
  float: right;
  text-align: right;
  font-size: 30rpx;
  height: 52rpx;
  line-height: 52rpx;
  padding-right: 60rpx;
}

.form .item textarea {
  width: 100%;
  float: left;
  height: 200rpx;
  border: 1px solid #e1e3e5;
  padding: 20rpx;
  box-sizing: border-box;
  margin-top: 20rpx;
  font-size: 28rpx;
}

.form .item .inputnote {
  width: 100%;
  float: left;
  text-align: right;
  color: #757980;
  font-size: 28rpx;
  padding: 20rpx 0rpx 30rpx 0rpx;
}

.form .item>image {
  position: absolute;
  right: 30rpx;
  top: 34rpx;
  width: 16rpx;
  height: 25rpx;
}

.form .item .files {
  width: 100%;
  float: left;
  padding: 30rpx 0rpx;
  position: relative;
}

.form .item .files .add {
  display: inline-block;
  background: #f0f2f5;
  width: 150rpx;
  height: 150rpx;
  border-radius: 8rpx;
  line-height: 150rpx;
  text-align: center;
}

.form .item .files>image {
  display: inline-block;
  vertical-align: middle;
  width: 150rpx;
  height: 150rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
}

.getOrder {
  color: #fff;
  width: 100%;
  position: fixed;
  bottom: 0px;
  left: 0px;
  display: flex;
}

.getOrder-btn {
  background: #245098;
  font-size: 30rpx;
  text-align: center;
  padding: 30rpx 0rpx;
  flex: auto;
}

.getOrder .notes {
  width: 50%;
  background: #fff;
  text-align: center;
}

.getOrder .notes p {
  display: block;
  color: #1e2021;
  font-size: 26rpx;
  margin-top: 14rpx;
}

.getOrder .notes span {
  color: #757980;
  font-size: 24rpx;
}

.item-data {
  margin-top: 20rpx;
  float: left;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.item-data .left {
  flex: 1;
}

.item-data .left text {
  display: block;
  font-size: 30rpx;
  color: #000;
  margin: 6rpx 0rpx;
}

.item-data .right {
  border-left: 1rpx solid #f0f2f5;
  text-align: center;
  color: #245098;
  padding: 0rpx 20rpx;
  font-size: 30rpx;
}

.mask {
  background-color: rgba(0, 0, 0, 0.7);
  -webkit-transition-duration: 300ms;
  transition-duration: 300ms;
  z-index: 100;
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
}

.popup-main {
  position: fixed;
  width: 80%;
  top: 50%;
  left: 50%;
  max-height: 100%;
  box-sizing: border-box;
  -webkit-animation: ease both;
  animation: ease both;
  -webkit-overflow-scrolling: touch;
  transition-timing-function: ease;
  -webkit-transform: translate3d(-50%, -50%, 0);
  transform: translate3d(-50%, -50%, 0);
}

.popup-box {
  background: #fff;
  padding: 60rpx 60rpx 0rpx 60rpx;
  position: relative;
  border-radius: 10rpx;
  overflow: auto;
  box-sizing: border-box;
  max-height:800rpx
}

.popup-box .dl {
  position: relative;
  z-index: 2;border-top: 1rpx solid #e1e3e5;padding: 32rpx 0rpx;
}

.popup-box .dt {
  font-size: 32rpx;
  color: #000;
  text-align: left;
}

.popup-box .dt image {
  width: 36rpx;
  height: 36rpx;
  margin-right: 20rpx;
  display: inline-block;
  vertical-align: middle;margin-top: -8rpx
}

.popup-box .dd {
  padding-left: 60rpx;
}

.popup-box .dd text {
  margin: 15rpx 0rpx;
  display: block;
  font-size: 28rpx;
  color: #1e2021;
}

.close {
  width: 45rpx;
  height: 45rpx;
  position: absolute;
  bottom: -100rpx;
  margin: auto;
  left: 0px;
  right: 0px;
}

.close image {
  width: 100%;
  height: 100%;
}
