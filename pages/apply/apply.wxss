
page {
  background: #f0f2f5;
  padding-bottom: 90rpx
}

.page {
  padding-bottom: 90rpx;
}
.step {
  background: #fff;
  position: relative;
  padding: 10rpx 0 20rpx 0;
}

.step .line {
  position: absolute;
  top: 98rpx;
  width: 100%;
  height: 2rpx;
  background: #e1e3e5;
  z-index: 0;
}


.step .ok {
  position: absolute;
  display: block;
  margin: auto;
  left: 0px;
  right: 0px;
  width: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  border-radius: 50%;
  background: #fff;
  border: 1px solid #245098;
  z-index: 10
}


.step .li {
  display: inline-block;
  width: 22.5%;
  text-align: center;
  z-index: 4;
  position: relative;
}

.step .li .circle {
  display: block;
  margin: auto;
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  background: #e1e3e5;
  border: 1px solid #b2b2b2;
}

.step .li .time {
  background: #fff;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  font-size: 26rpx;
}

.step .li .time .txt {
  display: inline-block;
  font-size: 26rpx;
  color: #e6492e;
  margin-left: 10rpx;
}

.step .li>text {
  display: inline-block;
  font-size: 30rpx;
  color: #b2b2b2;
  margin-top: 10rpx;
}

.step .active::before {
  position: absolute;
  top: 68rpx;
  left: 0px;
  right: 0px;
  margin: auto;
  display: inline-block;
  content: "";
  width: 14rpx;
  height: 14rpx;
  border-radius: 50%;
  background: #fff;
  z-index: 3;
  border: 13rpx solid #245098;
}

.step .lines {
  position: absolute;
  top: 98rpx;
  left: 0rpx;
  z-index: 2;
  height: 2rpx;
  background: #245098;
}

.step .active text {
  color: #245098;
}
.form {
  margin: 35rpx 25rpx;
}

.form .item {
  background: #fff;
  margin-bottom: 30rpx;
  padding: 20rpx;
  position: relative;
  border-radius: 5rpx;
  overflow: hidden;
}

.form .item label {
  color: #494b4c;
  font-size: 30rpx;
  display: block;
  height: 52rpx;
  line-height: 58rpx;
  float: left;
}

.form .item textarea {
  width: 100%;
  float: left;
  height: 200rpx;
  border: 1px solid #e1e3e5;
  padding: 20rpx;
  box-sizing: border-box;
  margin-top: 20rpx;
  font-size: 28rpx;
}

.form .item .inputnote {
  width: 100%;
  float: left;
  text-align: right;
  color: #757980;
  font-size: 28rpx;
  padding: 20rpx 0rpx 30rpx 0rpx;
}

.getOrder {
  background: #245098;
  color: #fff;
  width: 100%;
  font-size: 30rpx;
  text-align: center;
  padding: 30rpx 0rpx;
  position: fixed;
  bottom: 0px;left: 0px;
}
