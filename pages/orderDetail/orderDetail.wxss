/* pages/orderDetail/orderDetail.wxss */

page {
  background: #f0f2f5;
}

.page {
  position: relative;
}

.type {
  padding: 40rpx;
  background: #fff;
  font-size: 30rpx;
  font-weight: 600;
  color: #245098;
  background-image: url(data:image/png;base64,);
  background-size: 20rpx 32rpx;
  background-position: 95% 50%;
  background-repeat: no-repeat;
}

.type image {
  display: inline-block;
  font-size: 0;
  width: 42rpx;
  height: 42rpx;
  vertical-align: middle;
  margin-top: -6rpx;
}

.order {
  margin: 25rpx;
  background: #fff;
  border-radius: 6rpx;
  padding: 30rpx;
}

.order .title {
  padding-left: 20rpx;
  position: relative;
  font-size: 34rpx;
  padding-bottom: 30rpx;
  font-weight: 600;
}

.order .title::after {
  content: "";
  width: 8rpx;
  height: 45%;
  position: absolute;
  top: 12%;
  left: 0px;
  background: #245098;
}

.order .li {
  font-size: 28rpx;
  padding: 25rpx 0rpx;
  border-top: 2rpx solid #e1e3e5;
}

.order .li span {
  color: #757980;
  font-size: 30rpx;
}

.step .li .time {
  background: #fff;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  font-size: 26rpx;
}

.step .li .time .txt {
  display: inline-block;
  font-size: 26rpx;
  color: #e6492e;
  margin-left: 10rpx;
}

.step .li .time .txt image {
  width: 120rpx;
  height: 48rpx;
}

.order .li text {
  float: right;
  font-size: 30rpx;
  color: #1e2021;
  font-weight: 500;
  margin-top: 5rpx;
}

.order .li .dtls {
  margin-top: 20rpx;
  font-size: 30rpx;
  color: #1e2021;
  font-weight: 500;
}

.order .li .li-img {
  width: 100%;
}

.order .li .li-img image {
  width: 100rpx;
  height: 100rpx;
  margin-top: 15rpx;
  margin-right: 15rpx;
}

.order .li .result {
  display: inline-block;
  color: #7bb542;
  font-size: 32rpx;
  float: right;
}

.order .li .result .result-icon {
  width: 50rpx;
  line-height: 50rpx;
  height: 50rpx;
  background: #69b86a;
  border-radius: 50%;
  text-align: center;
  display: inline-block;
  vertical-align: middle;
}

.order .li .result .result-icon image {
  display: inline-block;
  width: 36rpx;
  height: 36rpx;
  vertical-align: middle;
}

.order .li .active {
  color: #f1594d;
}

.order .li .active .result-icon {
  background: #f76260;
}

.ordering {
  text-align: center;
}

.ordering image {width:410rpx;height: 280rpx;
  margin-bottom: 40rpx;
  margin-top: 70rpx;
}

.ordering text {
  display: block;
  font-size: 30rpx;
  letter-spacing: 4rpx;
}

.mask {
  background-color: rgba(0, 0, 0, 0.7);
  -webkit-transition-duration: 300ms;
  transition-duration: 300ms;
  z-index: 100;
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
}

.popup-main {
  position: fixed;
  width: 80%;
  top: 40%;
  left: 50%;
  max-height: 100%;
  box-sizing: border-box;
  -webkit-animation: ease both;
  animation: ease both;
  -webkit-overflow-scrolling: touch;
  transition-timing-function: ease;
  -webkit-transform: translate3d(-50%, -50%, 0);
  transform: translate3d(-50%, -50%, 0);
}

.popup-box {
  background: #fff;
  padding: 60rpx 60rpx 0rpx 60rpx;
  position: relative;
  border-radius: 10rpx;
  overflow: hidden;
  box-sizing: border-box;
}

.popup-box::after {
  content: "";
  width: 1rpx;
  height: 400rpx;
  background: #e1e3e5;
  position: fixed;
  left: 76rpx;
  top: 70rpx;
  z-index: 0;
}

.popup-box .li {
  display: flex;
  position: relative;
  z-index: 2;
  padding-bottom: 100rpx;
}

.popup-box .li:first-child::after {
  content: "";
  display: none;
}

.popup-box .li::after {
  content: "";
  width: 1rpx;
  height: 95%;
  background: #245098;
  position: absolute;
  left: 17rpx;
  top: -110rpx;
  z-index: 1;
}

.popup-box .li .raduis {
  display: inline-block;
  width: 26rpx;
  height: 26rpx;
  line-height: 22rpx;text-align: center;
  border: 4rpx solid #fff;
  background: linear-gradient(45deg, #245098, #327ad4);
  background: -moz-linear-gradient(45deg, #245098, #327ad4);
  border-radius: 50%;
  margin-right: 31rpx;
  margin-top: 1rpx;
  position: relative;
  z-index: 4;
}
.popup-box .li .raduis image{
  width: 15rpx;height: 11rpx;display: inline-block;vertical-align: middle
}
.popup-box .li .info {
  flex: auto;
  display: inline-block;
  line-height: 40rpx;
  font-size: 30rpx;
  color: #000;
}

.popup-box .li .info text {
  font-size: 24rpx;
  color: #999;
  float: right;
}

.close {
  width: 45rpx;
  height: 45rpx;
  position: absolute;
  bottom: -100rpx;
  margin: auto;left: 0px;right: 0px;
}

.close image {
  width: 100%;
  height: 100%;
}
