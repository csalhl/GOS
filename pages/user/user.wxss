/* pages/user/user.wxss */

page {
  background: #f5f6f7;
}

.page {
  position: relative;
  width: 100%;
  height: 100%;
}

.avatar {
  display: flex;
  padding: 60rpx 30rpx;
  background: #fff;
   align-items:  center ;
}

.avatar .avatar-img {
  display: inline-block;
  width: 70px;
  height: 70px;
  border: 4rpx solid #fafafa;
  padding: 4rpx;
  border-radius: 50%;
  overflow: hidden;
}

.avatar .avatar-img image {
  display: inline-block;
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.avatar .avatar-info {
  width: 70%;
  text-align: left;
  padding-left: 20rpx;
}

.avatar .avatar-info .name {
  text-align: left;
  font-size: 27rpx;
  color: #757980;
  margin-top: 14rpx;
}

.avatar .avatar-info .name text {
  color: #1e2021;
  font-size: 32rpx;
  margin-right: 18rpx;
}

.avatar .avatar-info .dtl {
  display: block;
  font-size: 26rpx;
  color: #494b4c;
  text-align: left;
  margin: 8rpx 0rpx;
}

.wkr {
  color: #757980;
  font-size: 29rpx;
}

.wkr text {
  color: #1e2021;
  margin: 0rpx 6rpx !important;
}

.level {
  display: inline-block;
  font-size: 24rpx;
  padding: 2rpx 12rpx;
  border-radius: 50rpx;
  color: #000;
  margin-right: 10rpx;
  background: -webkit-linear-gradient(left, #e2bc71, #f5c875); /* Safari 5.1 - 6.0 */
  background: -o-linear-gradient(right, #e2bc71, #f5c875); /* Opera 11.1 - 12.0 */
  background: -moz-linear-gradient(right, #e2bc71, #f5c875); /* Firefox 3.6 - 15 */
  background: linear-gradient(to right, #e2bc71, #f5c875); /* 标准的语法 */
}

.level image {
  display: inline-block;
  vertical-align: middle;
  width: 30rpx;
  height: 30rpx;
  margin-right: 4rpx;
}

.user-list {
  border-top: 60rpx solid #f5f6f7;
}

.user-list .box {
  background: #fff;
  padding: 37rpx 40rpx;
  border-bottom: 20rpx solid #f5f6f7;
  position: relative;
}

.user-list .box .box-icon {
  width: 44rpx;
  height: 44rpx;
  display: inline-block;
  vertical-align: middle;
  margin-right: 33rpx;
  margin-top: -3rpx;
}

.user-list .box .box-right {
  width: 16rpx;
  height: 26rpx;
  margin-top: 10rpx;float: right;
}

.login-out {
  text-align: center;
  padding: 40rpx 0rpx;
  background: #fff;
  font-size: 30rpx;
}
