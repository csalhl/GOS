/* page/login/login.wxss */

.login-form {
  display: block;
  margin-top: 60rpx;
}

.section {
  margin: 40rpx 70rpx;
  padding: 25rpx;
  background: #f2f3f5;
  border-radius: 8rpx;
  display: flex;
}

.section .section__title {
  width: 100rpx;
  text-align: center;
}

.section .section__title i-icon {
  margin-top: 4rpx;
  display: inline-block;
}

.section .see {
  display: inline-block;
  width: 54rpx;
  height: 50rpx;
}

.section .see image {
  display: inline-block;
  width: 45rpx;
  height: 34rpx;
  margin-top: 7rpx;
}

.section input {
  width: 100%;
  padding-left: 20rpx;
  font-size: 30rpx;
}

.weui-footer {
  position: absolute;
  bottom: 30rpx;
  left: 0px;
  right: 0px;
  margin: auto;
}
